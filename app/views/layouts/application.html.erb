<!DOCTYPE html>
<html>
  <head>
    <title>Popp Forest</title>
    <%= javascript_include_tag "https://js.stripe.come/v1/",'application', 'data-turbolinks-track': true %>
    <%= stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to "Popp Forest", home_index_path %>
        </div>
        <div id="nav-right">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href class="nav-text-color" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Admin
                <span class="caret">
                </span>
              </a>
              <ul class="dropdown-menu" id="dropdown">
                <li>
                  <%= link_to 'Customer Inquiries', contacts_path %>
                </li>
              </ul>
            </li>
            <li>
              <%= link_to "Home", root_path, class: "nav-text-color" %>
            </li>
            <li>
              <%= link_to "About", about_index_path, class: "nav-text-color" %>
            </li>
            <li>
              <%= link_to "Products", products_path, class: "nav-text-color" %>
            </li>
            <li>
              <%= link_to "Contact", new_contact_path, class: "nav-text-color" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
